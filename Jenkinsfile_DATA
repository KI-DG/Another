pipeline{
    agent any
    environment {
       DATA_CONTAINER_NAME="pipeline-confluent-kafka-rest"
       DATA_NAME = "pipeline-confluent-kafka-rest"
    }
    stages {
        stage('Clean'){
            steps{
                script {
                    try{
                        sh "docker-compose down"
                        sleep 1
                    }catch(e){
                        sh 'exit 0'
                    }
                }
            }
        }
        stage('Build') {
            steps {
                script{
                    sh "sed -i 's/\${DATA_SERVER}/${DATA_SERVER}/' '${WORKSPACE}/confluent_config/kafka-rest.properties'"
                    sh "docker build -t pipeline-confluent-kafka-rest ./another_data/."
                }
            }
        }
        stage('Deploy'){
            steps {
                sh "docker-compose up -d"
                sh "docker image prune --force"
            }
        }
    }
}
